@model ShawlGalore.Models.ShawlOccasionViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Shawls" asp-action="Index" method="get">
    <p>
        <select asp-for="ShawlOccasion" asp-items="Model.Occasions">
            <option value="">All</option>
        </select>
        Material: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>

            <th>

                @Html.DisplayNameFor(model => model.Shawls[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shawls[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shawls[0].Design)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shawls[0].Occasion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shawls[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shawls[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Shawls)
        {
            <tr>

                <td>

                    @Html.DisplayFor(modelItem => item.Material)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Design)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Occasion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
